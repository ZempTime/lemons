<p id="notice"><%= notice %></p>

<h1>Lemons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lemons.each do |lemon| %>
      <tr>
        <td><%= lemon.name %></td>
        <td><%= lemon.description %></td>
        <td><%= link_to 'Show', lemon %></td>
        <td><%= link_to 'Edit', edit_lemon_path(lemon) %></td>
        <td><%= link_to 'Destroy', lemon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lemon', new_lemon_path %>
